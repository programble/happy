extern com.writeChar, com.write, vga.writeChar, vga.write

%macro text.writeChar 0
  call com.writeChar
  call vga.writeChar
%endmacro

%macro text.writeChar 1
  mov al, %1
  text.writeChar
%endmacro

%macro text.write 0
  mov edi, esi
  call com.write
  mov esi, edi
  call vga.write
%endmacro

%macro text.write 1
  string %1
  text.write
%endmacro
