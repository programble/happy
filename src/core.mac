extern core.panic

%macro panic 1
  [section .rodata]
  %%panicMessage: db %1, `\n`, 0
  %%panicFile: db ' ', __FILE__, ':', 0

  __SECT__
  %%panic:
  cli
  pushad
  pushfd
  mov eax, %%panic
  mov ecx, __LINE__
  mov edx, %%panicFile
  mov esi, %%panicMessage
  jmp core.panic
%endmacro

%macro panicc 2
  j%-1 %%panicElse
  panic %2
  %%panicElse:
%endmacro
